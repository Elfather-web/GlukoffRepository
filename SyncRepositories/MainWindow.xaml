<Window x:Class="SyncRepositories.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GlukOffUpdate" Height="200" Width="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="1"  FontSize="15" FontWeight="UltraLight"  x:Name="Upload" Click="Upload_OnClick">Залить заявки</Button>
        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" FontWeight="UltraLight" Text="GlukOff.Net"></TextBlock>
    </Grid>
</Window>